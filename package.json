{
  "name": "my-node-app",
  "version": "1.0.0",
  "type": "module",
  "description": "A simple Node.js application",
  "scripts": {
    "start": "node ./backend/server.js",
    "test": "jest --verbose --coverage && start-server-and-test \"start\" \"http://localhost:8500\" \"cypress run\"",
    "test:cy": "start-server-and-test \"start\" \"http://localhost:8500\" \"cypress run --config video=false\"",
    "test:unit": "jest --verbose --coverage",
    "test:watch": "jest --watchAll --verbose --coverage",
    "test:e2e": "cypress run --config video=false",
    "cypress:open": "cypress open"
    
  },
  "dependencies": {
    "@types/jest": "^30.0.0",
    "cors": "^2.8.5",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "babel-jest": "^29.0.0",
    "cypress": "^14.5.1",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^30.0.2",
    "jest-fetch-mock": "^3.0.3",
    "start-server-and-test": "^2.0.12",
    "supertest": "^7.1.1"
  }
}
